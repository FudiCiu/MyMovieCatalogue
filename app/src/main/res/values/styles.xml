<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="detail_movie_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="detail_movie_text_on_back_drop">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="list_movie_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detail_title" parent="detail_movie_text">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="detail_value" parent="detail_movie_text">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="detail_title_on_backdrop" parent="detail_movie_text_on_back_drop">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="detail_movie_value_on_back_drop" parent="detail_movie_text_on_back_drop">
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="list_movie_title" parent="list_movie_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="list_movie_tanggal_rilis" parent="list_movie_text">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="list_movie_description" parent="list_movie_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
